# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/vibe-coding-accelerator
DATABASE_NAME=vibe_coding_accelerator

# Frontend Configuration
ANGULAR_PORT=4200
ANGULAR_HOST=localhost

# LLM Processing Configuration
LLM_API_ENDPOINT=https://api.openai.com/v1
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# File Storage Configuration
UPLOAD_DIRECTORY=./uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=.md,.txt,.json,.yaml,.yml

# Security Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h
CORS_ORIGIN=http://localhost:4200

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# AI Agent Configuration
DEFAULT_AI_AGENT=coding_standards_enforcer
AI_AGENT_TIMEOUT=30000

# Traceability Configuration
ENABLE_TRACEABILITY=true
TRACEABILITY_OUTPUT_FORMAT=json

# API Configuration
API_VERSION=v1
API_PREFIX=/api
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Development Configuration
HOT_RELOAD=true
DEBUG_MODE=false
MOCK_LLM_RESPONSES=false
