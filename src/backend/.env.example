# Vibe Coding Accelerator Backend Configuration

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:4200

# File Storage Configuration
PROJECT_STORAGE_PATH=./projects
AI_AGENTS_STORAGE_PATH=./ai_agents
UPLOAD_MAX_SIZE=50mb
ALLOWED_FILE_TYPES=.md,.txt,.json,.js,.ts,.py,.java,.html,.css,.scss,.xml,.yml,.yaml

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Security Configuration
CORS_ORIGIN=http://localhost:4200
HELMET_CSP_ENABLED=true

# Development Configuration
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_STACK_TRACE=true
